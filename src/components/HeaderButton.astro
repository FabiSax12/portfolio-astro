---
interface Props {
  label: string;
  href?: string;
}

const { label, href = "#" } = Astro.props;
---

<li>
  <a href={href}>
    {label}
  </a>
</li>

<style>
  li {
    cursor: pointer;
    font-size: 1rem;
    border-bottom: 1px solid transparent;
    padding-bottom: 2px;

    &:hover {
      color: rgb(var(--accent));
      /* text-decoration: underline; */
      border-bottom: 1px solid rgb(var(--accent));
    }
  }
</style>

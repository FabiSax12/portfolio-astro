---
interface Props {
	id: number;
	title: string;
	body: string;
	href: string;
	img?: string;
}

const { id, href, title, body, img } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<img
			src={img ?? `https://placehold.co/200x112?text=Hello\nWorld`}
			alt={title}
			transition:name=`img-proyect-${id}`
		/>
		<div class="info">
			<h3 transition:name=`title-proyect-${id}`>{title}</h3>
			<p transition:name=`description-proyect-${id}`>{body}</p>
		</div>
	</a>
</li>

<style>
	.link-card {
		min-height: 150px;
		height: min-content;
		position: relative;
		list-style: none;
		padding: 20px 10px;
		border-radius: 7px;
		cursor: pointer;
		transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);

		> a {
			display: flex;
			align-items: center;
			gap: 1rem;
		}
	}

	img {
		width: 200px;
		aspect-ratio: 16 / 9;
		object-fit: cover;
		border-radius: 7px;
	}

	.info {
		> h3 {
			margin: 0;
			font-size: 1.25rem;
			transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		}

		> p {
			margin: 0;
			font-size: 1rem;
		}
	}

	.chip-group {
		position: absolute;
		bottom: 20px;
		right: 10px;
		display: flex;
		gap: 1rem;
	}

	.link-card:hover {
		transform: scale(1.02);
		background-color: var(--bg-color-alt);
		opacity: 0.8;
	}
</style>

